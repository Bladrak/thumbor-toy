.modal
  display none

  &._is-opened
    display block

  &__container
    position absolute
    top  50%
    left 50%
    width  500px
    height 350px
    margin-left -250px
    margin-top  -175px
    border-radius 3px
    box-shadow 0 2px 7px rgba(0, 0, 0, 0.35)
    t(background-color, 'panel-bg-color')
    z-index 1001

  &__overlay
    width  100%
    height 100%
    background rgba(255, 255, 255, 0)
    position absolute
    top    0
    right  0
    bottom 0
    left   0
    z-index 1000