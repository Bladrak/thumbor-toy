button, input, select, textarea
  font-family inherit
  font-size 14px
  margin 0

.control-group
  margin-bottom 9px
  &__label
    width 40%
    display inline-block
    &--full
      display block
      width 100%;
      margin-bottom 9px
  &__control
    width 60%
    &--full
      width 100%

input[type="checkbox"]
  margin-right 7px

select
  font-size 16px

input[type="text"]
  color inherit
  t(background-color, 'control-bg-color')
  border none
  border-radius 2px
  padding 7px 10px

  //box-shadow 0 1px 0 darken($panel-bg-color, 13) inset

  &:focus
    t(background-color, 'control-bg-color-focus')
    t(color,            'control-txt-color-focus')

    outline none

