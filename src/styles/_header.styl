.header
  z-index 200

  height      $header-height
  line-height $header-height

  position absolute

  top   0
  left  0
  right 0

  padding 9px 10px 0

  font-size 16px

  background-color $header-bg-color

  &._has-error
    padding-left 40px

  input[type="text"]
    vertical-align top
    font-family consolas, menlo, monaco, monospace;
    background-color $bg-color
    width 100%
    padding 9px 9px 9px 46px

.url__status
  color $url-status-color-ok
  line-height 1em
  position absolute
  font-size 20px
  top 14px
  left 24px
  &._is-unkown
    color $url-status-color-unknown
  &._has-error
    color $url-status-color-error
