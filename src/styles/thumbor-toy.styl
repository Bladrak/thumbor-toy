@import './../../node_modules/normalize-css/normalize.css'

$fa-font-path = 'fonts'
@require './../../node_modules/font-awesome-stylus/stylus/index.styl'

@require '__vars.styl'

body
  font-size 14px

  height 100%
  width  100%

  background-color $bg-color
  color            $font-color

  font-family 'Lato', sans-serif

a
  color $font-color
  text-decoration none
  &:hover
    color #fff

*, *:before, *:after
  box-sizing border-box

.resize
  &__switch
    display inline-block
    width 50%

.render
  position absolute

  top  50%
  left 50%

  &__loader
    position absolute

    z-index 9000

    top  50%
    left 50%

    width       120px
    height      36px
    line-height 36px

    margin-left -60px
    margin-top  -18px

    text-align center
    background-color $panel-bg-color
    border-radius 2px

.content
  position absolute
  top    $header-height
  right  20%
  bottom 0
  left   20%
  overflow auto

@require '_sidebar.styl'
@require '_filter.styl'
@require '_filter-selector.styl'
@require '_header.styl'
@require '_forms.styl'
@require '_switch.styl'
@require '_panel.styl'
@require '_select.styl'
@require '_app-info.styl'