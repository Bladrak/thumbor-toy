.filter {
  color: $font-color;
  border-bottom: 1px solid $panel-bg-color;
  background: $panel-bg-color;
  margin: 0 10px 7px 10px;
  background-color: $filter-bg-color;
  box-shadow none
  border-radius 3px
  overflow hidden

  &__toggle,
  &__delete,
  &__expand {
    position: absolute;
    top: 0;
    display: block;
    width:       $filter-header-height;
    height:      $filter-header-height;
    line-height: $filter-header-height;
    text-align: center;
    color: $filter-btn-icon-color;
    cursor: pointer;
    &:hover {
      background-color: $filter-btn-bg-color-hover;
      color:            $filter-btn-icon-color-hover;
    }
  }
  &__toggle {
    left: 0;
    font-size: 12px;
  }
  &__delete {
    right: $filter-header-height;
    font-size: 10px;
  }
  &__expand {
    right: 0;
    font-size: 10px;
  }

  &__header {
    position: relative;
    display: block;
    padding: 0 0 0 ($filter-header-height + 10px);
    cursor: pointer;
    height:      $filter-header-height;
    line-height: $filter-header-height;
    font-weight: 300;
    cursor: move;
    &:hover {
      background $filter-header-bg-color-hover
    }
  }

  &__description {
    padding: 10px 10px;
    p {
      margin: 0;
    }
    a {
      .fa {
        margin-left: 3px;
        color: darken($font-color, 10);
      }
      &:hover {
        color: lighten($font-color, 10);
      }
    }
  }

  &__body {
    display: none;
    &._is-expanded {
      display: block;
    }
  }

  &__settings {
    color: $font-highlight-color;
    font-weight: 300;
    padding: 7px 10px 0 10px;
    select {
      width: 100%;
    }
    &__empty {
      text-align: center;
      margin-bottom: 7px;
    }
  }
  &._is-active {
    box-shadow 0 1px 2px rgba(0, 0, 0, 0.35)
    .filter__header {
      color: $font-highlight-color;
    }
  }

  &__setting {
    &--text {
      width: 100%;
      border: none;
      border-radius: 2px;
      padding: 3px 10px;
      &:focus {
        outline: 0 none;
      }
    }
  }
}

.filter__dnd {
  position: relative;
  &:after {
    position: absolute;
    content: ' ';
    display: none;
    background: #7293b7;
    right:  0;
    left:   0;
    height: 4px;
    z-index: 2000;
  }
  &._insert-before:after {
    top: -2px;
    display: block;
  }
  &._insert-after:after {
    bottom: -2px;
    display: block;
  }
  &._is-dragging {
    opacity: 0;
  }
}

.filters
  &__container
    &__wrapper
      position absolute
      top   130px
      right 0
      left  0
      width 100%
      bottom 42px
      overflow auto
      padding-top 3px
      // added to fix scrollbar position
      -webkit-transform translateZ(0)

  &__description-control
    padding 7px 15px
    cursor pointer
    margin-bottom 7px
    .fa
      margin-right 7px

    &--active
      .fa
        color $font-highlight-color
